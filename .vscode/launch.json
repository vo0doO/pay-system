{
    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "type": "chrome",
            "request": "launch",
            "name": "LaunchChrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "Node",
            "request": "launch",
            "restart": true,
            "localRoot": "${workspaceFolderBasename}/vui/",
            "program": "${workspaceFolder}/vui/",
            "runtimeExecutable": "${workspaceFolderBasename}/vui/node_modules/.bin/npx",
            "runtimeArgs": [
                "webpack",
                "serve",
                "--stats-children",
                "--stats-error-details"
            ],
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "psa",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open chrome",
            "url": "http://localhost:5000",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ]
        },
        {
            "name": "Python: Текущий файл",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Npm ==>> Chrome",
            "configurations": [
                "NpmStart",
                "LaunchChrome"
            ]
        },
        {
            "name": "Launch Edge Headless and attach DevTools",
            "configurations": [
                "Launch Microsoft Edge in headless mode",
                "Open Edge DevTools"
            ]
        },
        {
            "name": "Launch Edge and attach DevTools",
            "configurations": [
                "Launch Microsoft Edge",
                "Open Edge DevTools"
            ]
        },
    ]
}